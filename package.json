{
    "name": "prisma-appsync",
    "description": "Prisma Generator.",
    "version": "1.0.0",
    "bin": "./dist/generator.js",
    "scripts": {
        "install:boilerplate": "cd boilerplate\\cdk && yarn install",
        "build": "yarn build:cleanup && yarn build:generator && yarn build:client && yarn build:copytemplates",
        "build:cleanup": "(rd /s /q dist 2>nul || echo.) && (rd /s /q test\\generated 2>nul || echo.)",
        "build:copytemplates": "(xcopy /E /I /Y src\\generator\\templates dist\\templates >nul) && (icacls dist /grant Everyone:F /T >nul)",
        "build:generator": "esbuild src\\generator.ts --bundle --platform=node --external:fsevents --external:_http_common --outfile=dist\\generator.js",
        "build:client": "esbuild src\\client\\index.ts --bundle --minify --keep-names --platform=node --external:fsevents --external:@prisma/client --outfile=dist\\prisma-appsync\\index.js && tsc --outDir dist\\prisma-appsync\\ --declaration --emitDeclarationOnly"
    },
    "keywords": [
        "api",
        "appsync",
        "aws",
        "crud",
        "generator",
        "graphql",
        "prisma",
        "prisma-appsync",
        "appsync-crud-api"
    ],
    "devDependencies": {
        "@casl/ability": "^6.7.3",
        "@prisma/client": "^6.4.1",
        "@prisma/generator-helper": "^6.4.1",
        "@prisma/sdk": "^4.0.0",
        "@types/dot-object": "^2.1.6",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.13.5",
        "@types/nunjucks": "^3.2.6",
        "@types/pluralize": "^0.0.33",
        "@types/prettier": "^3.0.0",
        "@types/validator": "^13.12.2",
        "appsync-schema-converter": "^2.1.4",
        "babel-jest": "^29.7.0",
        "dot-object": "^2.1.5",
        "esbuild": "^0.25.0",
        "fs-extra": "^11.3.0",
        "graphql": "^16.10.0",
        "graphql-annotations": "^0.0.3",
        "jest": "^29.7.0",
        "jest-transform-graphql": "^2.1.0",
        "js-yaml": "^4.1.0",
        "lodash-es": "^4.17.21",
        "nunjucks": "^3.2.4",
        "pluralize": "^8.0.0",
        "prettier": "^3.5.2",
        "prisma": "^6.4.1",
        "ts-custom-error": "^3.3.1",
        "ts-jest": "^29.2.5",
        "ts-toolbelt": "^9.6.0",
        "typescript": "^5.7.3",
        "validator": "^13.12.0",
        "xss": "^1.0.15"
    }
}
